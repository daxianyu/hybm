/**index.wxss**/
page {
  background: linear-gradient(180deg, #A0BEE6 0%, #f6f7fb 100%);
  color: #333;
  font-size: 28rpx;
  height: 100%;
  overflow: hidden;
}
/* # rgb(160, 190, 2) */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.header {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.headtitle {
  text-align: center;
  font-size: 44rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  padding: 40rpx 40rpx 10rpx;
}

.page-title-text {
  text-align: left;
  font-size: 38rpx;
  font-weight: bold;
  color: #1E3C69;
}

.tip-container {
  padding: 0 40rpx 30rpx;
  display: flex;
  align-items: flex-start;
}

.page-title image {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 160rpx;
  height: 160rpx;
}

.tip {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #285096;
  text-align: justify;
  width: 75%;
}

.scroll-container {
  flex: 1;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

form {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 30rpx 30rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
  border-left: 16rpx solid #1a5caa;
}

.form-item {
  margin: 30rpx;
}

.title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
  color: #333;
  position: relative;
}

.title.must {
  padding-left: 24rpx;
}

.title.must:before {
  content: '*';
  position: absolute;
  color: #e64340;
  top: 0;
  left: 0;
  font-size: 32rpx;
}

input {
  display: block;
  border: none;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
  height: 80rpx;
  border-radius: 0;
  line-height: 80rpx;
  font-size: 42rpx;
  padding-left: 20rpx;
  background-color: transparent;
  width: 100%;
  color: #666;
}

.radio-horizontal {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-btn {
  min-width: 80rpx;
  height: 60rpx;
  background-color: #f6f7fb;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 0 30rpx;
}

.radio-btn radio {
  position: absolute;
  opacity: 0;
}

.radio-btn-active {
  background-color: #1a5caa;
  color: #fff;
}

.radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx 20rpx;
}

.privacy {
  margin: 40rpx 30rpx;
  font-size: 30rpx;
  color: #666;
}

.privacy checkbox-group {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.privacy checkbox {
  transform: scale(1);
  margin-right: 5rpx;
}

.privacy text {
  color: #1a5caa;
  font-size: 30rpx;
}

.privacy view {
  font-size: 30rpx;
  color: #666;
  line-height: 1.7;
}

.submit-btn {
  margin: 60rpx 30rpx;
  width: calc(100% - 60rpx);
}

button {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(to right, #1a5caa, #3a7ac8);
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: normal;
  box-shadow: 0 8rpx 16rpx rgba(26, 92, 170, 0.2);
}

button::after {
  border: none;
}

button[disabled] {
  background: #cccccc;
  color: #999999;
  box-shadow: none;
}

.reason {
  transform: scale(0.9);
}

image {
  width: 100%;
  display: block;
}

input[name="name"],
input[name="class"],
input[name="school"],
input[name="mobile"],
input[name="email"],
input[name="wx"] {
  border-bottom: 1px solid #ddd;
}

.bottom-space {
  height: 100rpx;
}